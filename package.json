{
    "name": "single-spa-microfrontend",
    "version": "1.0.0",
    "description": "Single-spa microfrontend with main app and child apps",
    "private": true,
    "scripts": {
        "start": "concurrently \"npm run start:root\" \"npm run start:main\" \"npm run start:child\"",
        "start:root": "webpack serve --config webpack.config.root.js --port 9000",
        "start:main": "webpack serve --config webpack.config.main.js --port 9001",
        "start:child": "webpack serve --config webpack.config.child.js --port 9002",
        "build": "npm run build:root && npm run build:main && npm run build:child",
        "build:root": "webpack --config webpack.config.root.js --mode production",
        "build:main": "webpack --config webpack.config.main.js --mode production",
        "build:child": "webpack --config webpack.config.child.js --mode production"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "single-spa": "^6.0.0",
        "single-spa-react": "^6.0.0",
        "systemjs": "^6.12.1"
    },
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "@babel/preset-react": "^7.22.0",
        "babel-loader": "^9.1.3",
        "concurrently": "^8.2.2",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.1",
        "html-webpack-plugin": "^5.5.3",
        "style-loader": "^3.3.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^4.15.1"
    }
}
